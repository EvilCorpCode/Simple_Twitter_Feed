<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    android:clickable="false"
    android:focusable="false"
    app:cardElevation="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">

        <TextView
            android:id="@+id/user"
            style="@style/Text.Medium"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/position"
            android:layout_toStartOf="@id/position"
            android:ellipsize="end"
            android:lines="1"
            tools:text="Mt Washington Legend Banker" />

        <TextView
            android:id="@id/position"
            style="@style/Text.Small.Accent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            tools:text="#1" />

        <TextView
            android:id="@+id/content"
            style="@style/Text.Small.SecondaryColor"
            android:layout_below="@id/user"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam quam libero..." />

        <TextView
            android:id="@+id/date_time"
            style="@style/Text.Small.Accent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/content"
            tools:text="3/5/17 1:07 PM" />

    </RelativeLayout>
</android.support.v7.widget.CardView>